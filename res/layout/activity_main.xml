<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ziseanfla_refix"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.binwang.qanda.ui.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFB704"
            android:gravity="center"
            android:text="顺序练习"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/simulate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="#FFB704"
            android:gravity="center"
            android:text="模拟考试"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/replacement"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="#FFB704"
            android:gravity="center"
            android:text="更换题库"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp" >

            <LinearLayout
                android:id="@+id/favorite"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageOne"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#8bb2a2"
                    android:padding="5dp"
                    android:src="@drawable/icon_favorite" />

                <TextView
                    android:id="@+id/help"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="我的收藏" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wrong"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#c78a8a"
                    android:padding="5dp"
                    android:src="@drawable/icon_wrong" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="我的错题" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/history"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#7b97ab"
                    android:padding="8dp"
                    android:src="@drawable/icon_history" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="历史成绩" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>